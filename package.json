{
	"name": "svelte-showdown",
	"version": "0.4.0",
	"license": "MIT",
	"type": "module",
	"description": "Wrapper for Showdown that parses Markdown in your Svelte components",
	"author": "Bugo",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/dragomano/svelte-showdown.git"
	},
	"homepage": "https://github.com/dragomano/svelte-showdown",
	"bugs": "https://github.com/dragomano/svelte-showdown/issues",
	"keywords": [
		"svelte",
		"showdown",
		"markdown"
	],
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint ."
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"dependencies": {
		"@types/showdown": "^2.0.6",
		"showdown": "^2.1.0"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.4",
		"@sveltejs/adapter-auto": "^3.3.1",
		"@sveltejs/kit": "^2.15.2",
		"@sveltejs/package": "^2.3.7",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"eslint": "^9.17.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.46.1",
		"globals": "^15.14.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.2",
		"publint": "^0.3.0",
		"svelte": "^5.16.6",
		"svelte-check": "^4.1.1",
		"typescript": "^5.7.2",
		"typescript-eslint": "^8.19.1",
		"vite": "^6.0.7"
	},
	"publishConfig": {
		"access": "public",
		"provenance": true
	}
}
